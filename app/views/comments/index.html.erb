
<h1>Comentarios de: <%= @post.title %></h1>

<p id="notice"><%= notice %></p>

<%= render partial: 'form' %>

<% @comments.each do |comment| %>
  <div>
    Someone said:
    <b>"</b><%= comment.body %><b>"</b>
    <i>
      <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
    </i>
  </div>
<% end %>

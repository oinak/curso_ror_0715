<% [5,10,25,50,100].each do |qty| %>
  <%= link_to_unless_current qty, url_for(params.merge(qty: qty)) %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th>Description</th>
      <th>Published</th>
      <th>Comments</th>
      <th>Publish date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.url %></td>
        <td><%= post.description %></td>
        <td><%= post.published ? 'sÃ­' : 'no' %></td>
        <td> <%= link_to_comments(post) %> </td>
        <td><%= distance_of_time_in_words post.created_at, Time.now %> ago</td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

